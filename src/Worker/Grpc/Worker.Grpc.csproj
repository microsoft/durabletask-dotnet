<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net6.0;net8.0;net10.0</TargetFrameworks>
    <PackageDescription>The gRPC worker for the Durable Task Framework.</PackageDescription>
    <EnableStyleCop>true</EnableStyleCop>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="../Core/Worker.csproj" />
    <ProjectReference Include="../../Abstractions/Abstractions.csproj" />
    <ProjectReference Include="../../Grpc/Grpc.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Google.Protobuf" VersionOverride="3.33.2" />
    <PackageReference Include="Microsoft.Bcl.AsyncInterfaces" VersionOverride="10.0.2" />
  <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" VersionOverride="10.0.2" />
    <SharedSection Include="Core" />
    <SharedSection Include="DependencyInjection" />
    <SharedSection Include="Grpc" />
  </ItemGroup>
</Project>
