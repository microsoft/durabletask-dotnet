<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PackageDescription>The core client for the Durable Task Framework.

The client is responsible for interacting with orchestrations from outside the worker.</PackageDescription>
    <EnableStyleCop>true</EnableStyleCop>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Options" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../../Abstractions/Abstractions.csproj" />
  </ItemGroup>

  <ItemGroup>
    <SharedSection Include="DependencyInjection" />
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="Microsoft.DurableTask.Client.Grpc" Key="$(StrongNamePublicKey)" />
    <InternalsVisibleTo Include="Microsoft.DurableTask.Client.OrchestrationServiceClientShim" Key="$(StrongNamePublicKey)" />
    <InternalsVisibleTo Include="Microsoft.DurableTask.Client.Tests" Key="$(StrongNamePublicKey)" />
  </ItemGroup>

</Project>
